---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";

//Images import
import IconSedans from "../Images/icon-sedans.svg";
import IconSuvs from "../Images/icon-suvs.svg";
import IconLuxury from "../Images/icon-luxury.svg";
---

<Layout title="Frontend Mentor | 3-column preview card component">
	<main class="w-screen h-screen flex content-center items-center overflow-x-hidden">
		<div class="flex flex-col content-center items-center mx-[23%] lg:flex-row">
			<Card
				src={IconSedans}
				alt="SedansImage"
				image="icon-sedans.svg"
				title="SEDANS"
				info="Choose a sedan for its affordability and excellent fuel economy. Ideal for cruising in the city or on your next road trip."
				color="#E28525"
				radius="10px 0 0 10px"
			/>
			<Card
				src={IconSuvs}
				alt="SuvsImage"
				image="../Images/icon-suvs.svg"
				title="SUVS"
				info="Take an SUV for its spacious interior, power, and versatility. Perfect for your next family vacation and off-road adventures."
				color="#016972"
			/>
			<Card
				src={IconLuxury}
				alt="LuxuryImage"
				title="SEDANS"
				info="Cruise in the best car brands without the bloated prices. Enjoy the enhanced comfort of a luxury rental and arrive in style."
				color="#00403F"
				radius="0 10px 10px 0"
			/>
		</div>
	</main>
</Layout>
