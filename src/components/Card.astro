---
import type { ImageMetadata } from "astro";

interface props {
    desktopImgUrl: string | ImageMetadata;
    alt: string;
}

const { src, alt, title, info, color, radius } = Astro.props;
---

<div style=`background-color: ${color}; border-radius: ${radius}` class="text-white px-10 py-12">
    <img src={ src.src } alt={ alt } class="mb-7">
    <h1 class="font-bold text-3xl mb-7">{title}</h1>
    <p class="opacity-75 mb-[6rem]">{info}</p>
    <button style=`color: ${color}` class="bg-white font-semibold border-2 border-transparent px-5 py-3 rounded-full hover:cursor-pointer hover:text-white hover:bg-transparent transition-all hover:border-white">Learn more</button>
</div>